<ol class="branches list-group">
    {% for provider in branches %}
        <li class="message-provider list-group-item d-flex justify-content-between align-items-start"
            data-provider-type="{{ provider.type }}"
            data-provider-id="{{ provider.id }}"
        >
            <div class="ms-2 me-auto">
                <div>{{ provider.name }}</div>
            </div>
            <span class="badge bg-primary rounded-pill">{{ provider.newMessagesCount }}</span>
        </li>
    {% endfor %}
</ol>
