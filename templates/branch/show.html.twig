{% extends 'base.html.twig' %}

{% block title %}Branch{% endblock %}

{% block body %}
    <h1>Branch</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ branch.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ branch.name }}</td>
            </tr>
            <tr>
                <th>IsPrivate</th>
                <td>{{ branch.isPrivate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsInformational</th>
                <td>{{ branch.isInformational ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ branch.creationDate ? branch.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ArchivingDate</th>
                <td>{{ branch.archivingDate ? branch.archivingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_branch_index') }}">back to list</a>

    <a href="{{ path('app_branch_edit', {'id': branch.id}) }}">edit</a>

    {{ include('branch/_delete_form.html.twig') }}
{% endblock %}
