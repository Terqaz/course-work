{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container mx-auto" style="max-width:550px;">
    <h1>{{ user.lastName ~ ' ' ~ user.firstName ~ ' ' ~ user.middleName }}</h1>
    <table class="table mt-4">
        <tbody>
        <tr>
            <th> Дата рождения </th>
            <td>{{ (user.birthDate ? user.birthDate|date('Y-m-d') : '')|default('Не указана') }}</td>
        </tr>
        <tr>
            <th> Email </th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th> Телефон </th>
            <td>{{ user.phone|default('Не указан') }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-inline-flex">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary me-2"> Изменить данные </a>
    </div>
</div>
{% endblock %}
